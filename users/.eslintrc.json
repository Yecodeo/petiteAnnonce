{
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:jest/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "babelOptions": {
            "configFile": "./users/.babelrc"
        }
    },
    "plugins": [
        "jest", 
        "@typescript-eslint"
    ],
    "env": {
        "es2020": true,
        "commonjs": true,
        "node": true,
        "mocha": true,
        "browser": false,
        "jest": true
    },
    "settings": {
        "jest": {
            "version": 26
        },
    },
    "rules": {
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-var": [
            "off"
        ],
        "one-var": [
            "off"
        ],
        "max-len": ["error", 120],
        "consistent-return": "off",
        "no-console": "off",
        "no-param-reassign": [2, {
            "props": false
        }],
        "prefer-destructuring": 0,
        "treatUndefinedAsUnspecified": 0,
        "arrow-body-style": 0,
        "import/no-dynamic-require": "off",
        "no-unused-expressions": "off",
        "import/no-unresolved": "off",
        "complexity": ["error", 10]
    }
}
